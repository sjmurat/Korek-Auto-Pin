<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nashville.kurds.autopin.Main2Activity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter your pin number to activate your card easly!"
        android:id="@+id/textView6"
        android:layout_marginLeft="34dp"
        android:textAlignment="center"
        android:layout_above="@+id/textView12"
        android:layout_marginBottom="36dp"
        android:textColor="#c22b2b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXXXX - XXXXX - XXXX"
        android:id="@+id/textView12"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#394cc8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scratch your card and type in your pin number below to simply add the network card to your phone. once you type in the pin number, click on Activate Pin. Once you click on on activate pin, your phone will automatically call a number. Thats it, thats all you do.  :) The pin will then be inserted"
        android:id="@+id/textView17"
        android:enabled="true"
        android:forceHasOverlappingRendering="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate My Pin"
        android:id="@+id/button12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#d32424" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_above="@+id/button12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter code below from the given pin number"
        android:id="@+id/textView18"
        android:layout_above="@+id/editText6"
        android:layout_centerHorizontal="true"
        android:textColor="#c22b2b" />

</RelativeLayout>

