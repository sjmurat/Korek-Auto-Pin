<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nashville.kurds.autopin.Main2Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Money Request"
        android:id="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignParentStart="true"
        android:textColor="#d32424" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Want to request money from a friend or family member? fill in the information and click the send money request. when you fill in the appropriate information, the family or friend will recieve it as a text and you should recieve the amount as soon as they send the money to your phone number. let your friend or family member know to download this app to send money to you faster. "
        android:id="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Send contact  a message requesting 1,000 (IQD) "
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignEnd="@+id/textView6"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Friend or Family"
        android:id="@+id/textView2"
        android:textColor="#d32424"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:background="@mipmap/ic_launcher_contacticon"
        android:clickable="true"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText97"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Name"
        android:id="@+id/textView16"
        android:textColor="#da1212"
        android:layout_alignBaseline="@+id/editText97"
        android:layout_alignBottom="@+id/editText97"
        android:layout_toEndOf="@+id/imageView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:background="@mipmap/ic_launcher_avatar"
        android:clickable="true"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

</RelativeLayout>

